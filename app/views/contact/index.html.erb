<header>
    <div class="header">
      <div class="site-title">AKINO'S PORTFOLIO</div>
      <div class="category">
        <ul id="tabcontrol">
          <li><input type="radio" name="tabset" id="tabcheck1"        ><label for="tabcheck1" class="tab"><%= link_to "PROFILE", root_path %></label></li>
          <li><input type="radio" name="tabset" id="tabcheck2"        ><label for="tabcheck2" class="tab">PORTFOLIO</label></li>
          <li><input type="radio" name="tabset" id="tabcheck3"        ><label for="tabcheck3" class="tab">SKILL SET</label></li>
          <li><input type="radio" name="tabset" id="tabcheck4" checked><label for="tabcheck4" class="tab"><%= link_to "CONTACT", contact_path %></label></li>
        </ul>
        </div>
    </div>
    </div>
</header>
<%= form_for @contact, :url => contact_confirm_path do |f| %>
  <div class="page-header">
    
    <div class= "contact">CONTACT</h1>
  </div>

  <% if @contact.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @contact.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <th>名前<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>メールアドレス<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th>内容</th>
      <td><%= f.text_area :message %></td>
    </tr>
  </table>
  <%= f.submit '確認', class: 'btn btn-primary' %>
<% end %>
